# =============================================================================
# Multi-Agent RAG System - Environment Variables Template
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Azure Document Intelligence
# -----------------------------------------------------------------------------
# Service for extracting text from PDF documents
# Get these from: Azure Portal > Document Intelligence resource > Keys and Endpoint
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intelligence.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_document_intelligence_key_here

# -----------------------------------------------------------------------------
# Azure AI Foundry - Embedding Model
# -----------------------------------------------------------------------------
# CRITICAL: These are from Azure AI Foundry (NOT Azure OpenAI Service)
# Model: text-embedding-ada-002 (already deployed)
# Get these from: Azure AI Foundry > Deployments > Your embedding deployment
AZURE_AI_FOUNDRY_EMBEDDING_ENDPOINT=https://your-ai-foundry-endpoint.openai.azure.com/
AZURE_AI_FOUNDRY_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002
AZURE_AI_FOUNDRY_EMBEDDING_API_KEY=your_embedding_api_key_here

# API version for Azure AI Foundry embedding calls
AZURE_AI_FOUNDRY_EMBEDDING_API_VERSION=2024-08-01-preview

# -----------------------------------------------------------------------------
# Azure AI Foundry - GPT-4 Model
# -----------------------------------------------------------------------------
# CRITICAL: These are from Azure AI Foundry (NOT Azure OpenAI Service)
# Model: GPT-4 (already deployed)
# Get these from: Azure AI Foundry > Deployments > Your GPT-4 deployment
AZURE_AI_FOUNDRY_GPT4_ENDPOINT=https://your-ai-foundry-endpoint.openai.azure.com/
AZURE_AI_FOUNDRY_GPT4_DEPLOYMENT_NAME=gpt-4
AZURE_AI_FOUNDRY_GPT4_API_KEY=your_gpt4_api_key_here

# API version for Azure AI Foundry GPT-4 calls
AZURE_AI_FOUNDRY_GPT4_API_VERSION=2024-08-01-preview

# -----------------------------------------------------------------------------
# Azure AI Search
# -----------------------------------------------------------------------------
# Vector search service for storing and retrieving document chunks
# Get these from: Azure Portal > AI Search resource > Keys
# NOTE: Using Admin Key (has full management permissions including index creation)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_ADMIN_KEY=your_search_admin_key_here

# Index name (will be created programmatically if it doesn't exist)
AZURE_SEARCH_INDEX_NAME=rag-documents-index

# -----------------------------------------------------------------------------
# Azure Application Insights
# -----------------------------------------------------------------------------
# Monitoring and logging service
# Get this from: Azure Portal > Application Insights > Overview > Connection String
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Chunk size for text splitting (in characters)
CHUNK_SIZE=1200
# Chunk overlap ratio (0.0 to 1.0)
CHUNK_OVERLAP=0.2

# Number of chunks to retrieve for each query (top-k)
RETRIEVAL_TOP_K=5

# LLM temperature for agent responses (0.0 to 1.0)
LLM_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Production Security Recommendations
# -----------------------------------------------------------------------------
# ⚠️  IMPORTANT: For production environments, replace API key authentication
#    with Azure Managed Identity for enhanced security:
#    - Eliminates the need to store API keys in environment variables
#    - Provides automatic credential rotation
#    - Enables fine-grained RBAC (Role-Based Access Control)
#
#    Example: Use DefaultAzureCredential() from azure.identity library
#    See: https://learn.microsoft.com/azure/developer/python/sdk/authentication-overview
# -----------------------------------------------------------------------------
